<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingVertical="20sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/RightBlue"
        app:cardCornerRadius="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp">

            <TextView
                android:id="@+id/titleOfAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of the announcement"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    app:cardCornerRadius="100sp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="59sp"
                        android:layout_height="59sp"
                        app:cardCornerRadius="100sp"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/senderImgOfAnnouncer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/avatar_img"/>

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15sp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/nameOfAnnouncer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Name of the admin"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/timeOfAnnouncement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="4:50 pm | 19 April 2024"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/contentOfAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.11"
                android:text="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Nobis porro consequuntur fugit! Quod, accusamus fugiat minus temporibus alias delectus doloribus velit cupiditate, facilis quae enim ipsa cumque saepe, aut magnam."
                android:textColor="@color/white" />

            <!-- Adjusted ImageView -->
            <ImageView
                android:id="@+id/imgOfAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/csi" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
