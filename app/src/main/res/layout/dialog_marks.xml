<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/RightBlue"
    android:orientation="vertical"
    android:paddingBottom="10sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/RightBlue"
        app:cardCornerRadius="10sp">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20sp"
                    android:background="@color/RightBlue">
                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:drawableLeft="@drawable/cancel_icon"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:id="@+id/postMarks"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@drawable/background_profile_orange"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="15sp"
                        android:paddingVertical="5sp"
                        android:layout_alignParentEnd="true"
                        android:enabled="false">
                        <TextView
                            android:id="@+id/dayOfWeek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20sp">

                    <EditText
                        android:id="@+id/dialogTitleOfMarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Exam Type"
                        android:textColorHint="#8D8D8D"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maths"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <EditText
                                android:id="@+id/ETmathsMarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50sp"
                                android:hint="Marks"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/ETmathsOutOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Out of"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mp"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <EditText
                                android:id="@+id/ETmpMarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50sp"
                                android:hint="Marks"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/ETmpOutOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Out of"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Os"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <EditText
                                android:id="@+id/ETosMarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50sp"
                                android:hint="Marks"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/ETosOutOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Out of"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SBLC"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <EditText
                                android:id="@+id/ETpyMarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50sp"
                                android:hint="Marks"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/ETpyOutOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Out of"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DBMS"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <EditText
                                android:id="@+id/ETdbmsMarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50sp"
                                android:hint="Marks"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/ETdbmsOutOf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Out of"
                                android:textColorHint="#8D8D8D"
                                android:textColor="@color/white"/>
                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>



    </androidx.cardview.widget.CardView>

</LinearLayout>
